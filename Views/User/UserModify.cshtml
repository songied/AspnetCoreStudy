@model AspnetCoreStudy.Models.Member
@{
    ViewData["Title"] = "UserModify";
}

<h1>UserModify</h1>

<form class="form-horizontal" method="post" asp-controller="User" asp-action="UserModify">
    <div class="form-group">
        <label>사용자 아이디</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="사용자 아이디 입력" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>사용자 비밀번호</label>
        <input type="text" class="form-control" asp-for="UserPw" placeholder="사용자 비밀번호 입력" />
        <span class="text-danger" asp-validation-for="UserPw"></span>
    </div>

    <div class="form-group">
        <label>사용자 이름</label>
        <input type="text" class="form-control" asp-for="UserNm" placeholder="사용자 이름 입력" />
        <span class="text-danger" asp-validation-for="UserNm"></span>
    </div>

    <div class="form-group">
        <label>사용자 이메일</label>
        <input type="email" class="form-control" asp-for="UserEmail" placeholder="사용자 이메일 입력" />
        <span class="text-danger" asp-validation-for="UserEmail"></span>
    </div>

    <div class="form-group">
        <label>사용자 성별</label><br />
        <input type="radio" name="UserGender" class="form-check-label" asp-for="UserGender" value="남자" />남자&nbsp;&nbsp;&nbsp;
        <input type="radio" name="UserGender" class="form-check-label" asp-for="UserGender" value="여자" />여자<br />
        <span class="text-danger" asp-validation-for="UserGender"></span>
    </div>

    <div class="form-group">
        <label>사용자 사진</label>
        <input type="text" class="form-control" asp-for="UserPhoto" placeholder="사용자 사진 입력" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">수정</button>
        <a class="btn btn-warning"  asp-controller="User" asp-action="UserActivity">취소</a>
    </div>



</form>
